{
  "builders": [
		{
			"type": "virtualbox-ovf",
			"source_path": "virtualbox-ovf/box.ovf",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
      "headless": true,
			"shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh",
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "inline": ["sleep 60; echo Hello again"],
      "expect_disconnect": true
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/main.yml",
      "galaxy_file": "requirements.yml",
      "extra_arguments": [
          "--skip-tags={{ user `ansible_skip_tags` }}",
          "--user=vagrant"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-ubuntu1804.box",
        "type": "vagrant",
        "keep_input_artifact": true
      },
      {
        "inline": [
          "make test_newBox"
        ],
        "type": "shell-local"
      }
    ],
    [
      {
        "output": "builds/{{.Provider}}-ubuntu1804.box",
        "type": "vagrant",
        "keep_input_artifact": true
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "kraeml/ubuntu_1804_de_extended",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}"
      }
    ],
    [
      {
        "environment_vars": [
          "VERSION={{user `version`}}"
        ],
        "inline_shebang": "/bin/bash -e",
        "inline": [
          "echo $VERSION > version"
        ],
        "type": "shell-local"
      }
    ]
  ],
  "variables": {
    "cloud_token": "{{ env `ATLAS_TOKEN` }}",
    "version": "{{isotime \"06.01.0215\"}}",
    "ansible_skip_tags": "ansible,not_packer,todo"
  }
}
